<% for product in @products %>
  <a href="<%= product_path(product.id) %>" class="box col-xs-12 col-sm-6 col-md-4 col-lg-3" style='padding:0px'>
    <div class="thumbnail">
      <div class='thumbnail-header-bar' style='height: 40px; padding:10px;'>
        <p style='float:left; font-weight: 600;'><%= product.name %></p>
        <p style='float:right; font-weight: 600; color:#45b052;'>
          <%= product.thc_content %>
          <% if product.category.name == 'Flowers' %>
            <%= '% THC' %>
          <% elsif product.category.name == 'Concentrates' %>
            <%= '% THC' %>
          <% else %>
            <%= 'mg THC' %>
          <% end %>
        </p>
      </div>
      <div class='thumbnail-image-body' style='height: 285px'>
        <img class="img-responsive" src="<%= product.image_url %>" style='height: 100%'>
        <div class='thc-content-block'>
          <div class='thc-content-number' style='height:60%'>
            <%= number_to_currency(product.price) %>
          </div>
          <div style='font-size:16px; height:40%; float:left; width: 100%;'>
            <% if product.category.name == 'Flowers' %>
              <%= 'per gram' %>
            <% elsif product.category.name == 'Concentrates' %>
              <%= 'per gram' %>
            <% else %>
              <%= 'per unit' %>
            <% end %>
          </div>
        </div>
      </div>
      <div class='thumbnail-details'>
        <div class='general-description' style='border-bottom: 1px solid #ddd; font-size: 14px; padding: 10px;'>
          <h4 style='margin: 0px 0px 5px 0px; font-size: 18px;'>Description</h4>
          <%= truncate(product.description, length: 100) %>
        </div>
        <div class='medical-description' style='font-size: 14px; padding: 10px;'>
          <h4 style='margin: 0px 0px 5px 0px; font-size: 18px;'>Medical Use</h4>
          <%= truncate(product.medical_description, length: 30) %>
        </div>
      </div>
    </div>
  </a>

<% end %>

