<div class='sign-up'>
  <%= render 'layouts/header_user' %>
  <div class='container'>
    <h1 style='color: #ffffff; font-weight: 600; text-align: center; margin-top: 40px;'>SIGN UP</h1>
    <p style='color: #ffffff; text-align: center; font-size: 12px;'>Already have an account? <%= link_to 'Sign In', new_user_session_path, style: 'color: #ffffff; text-decoration: underline;' %></p>
    <div class='col-sm-4 col-sm-offset-4' style='margin-top: 5%; padding: 0px'>
      <h3 style='background: #404040; text-transform: uppercase; color: white; font-weight: 600; letter-spacing: 0.15em; font-size: 17px; padding: 1.5em 0; margin: 0px; text-align: center;'>SIGN UP WITH YOUR EMAIL</h3>

      <div class='form-group' style='padding:15px;'>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

          <div><%= f.text_field :first_name, autofocus: true, placeholder: 'FIRST NAME', style: 'width: 47%; float:left' %></div>

          <div><%= f.text_field :last_name, autofocus: true, placeholder: 'LAST NAME', style: 'width: 47%; float:right;' %></div>

          <div><%= f.email_field :email, autofocus: true, placeholder: 'EMAIL' %></div>

          <div><%= f.password_field :password, autocomplete: "off", placeholder: 'PASSWORD' %></div>

          <div><%= f.submit "Sign up" %></div>
        <% end %>

        <div style='width: 100%; height: 14px;'>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), id: 'forgot-pw' %>
          <% end -%>
        </div>
      </div>

    </div>
  </div>
</div>
